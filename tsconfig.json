{
  "compilerOptions": {
    "jsx": "preserve",
    "noEmitOnError": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib/types",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}